#login-top
    margin 0 auto
    padding 0 0.75rem
    max-width 0.75rem + 7rem + 20rem + 0.75rem
    // #login-top.padding-left .login-form-label.width #login-email.max-width #login-top.padding-right
#login-banner
    margin-top 1rem
    text-align center
    font-weight bold
    font-size 1.5rem
#login-forserv
    margin-top 0.5rem
    font-size 0.9rem
    line-height 1.2
#login-form
    margin-top 1.5rem
.login-form-label
    margin-bottom 0
    width 7rem // "Email address" plus 10%
#login-email-row, #login-password-row
    display flex
    flex-wrap wrap
    align-items center
#login-email, #login-password
    max-width 20rem
#login-password-row
    margin-top 1rem
#login-remember-row
    margin-top 1rem
    text-align center
    line-height 1.5
#login-submit-row
    margin 1rem 0 2rem
    text-align center
#login-failed
    color red
    text-align center
#login-reset
    margin-top 1rem
    text-align center
