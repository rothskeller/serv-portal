#certAttendance
    padding 1.5rem 0.75rem
#certAttendance-table
    margin-top 1.5rem
    border-right 2px solid black
    border-bottom 2px solid black
    thead
        td:first-child
            border-top none
            border-left none
        tr:first-child td:not(:first-child)
            border-top 2px solid black
        tr:nth-child(2) td
            padding 6px 2px
            vertical-align bottom
            text-align center
            writing-mode tb-rl
        tr:first-child td
            padding 2px 6px
    tbody
        border-top 2px solid black
        border-left 2px solid black
        tr:nth-child(even)
            background-color #eee
    td
        min-width 2rem
        border-top 1px solid #ccc
        border-left 1px solid #ccc
        text-align center
        &:first-child
            padding 2px 6px
            text-align left
        &.certAttendance-span
            border-left 2px solid black
    tfoot
        border-top 2px solid black
        border-left 2px solid black
